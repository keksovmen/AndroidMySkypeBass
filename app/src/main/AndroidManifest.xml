<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="keksovmen.android.com">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Implementation.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ricardo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ricardo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Implementation.Views.Activities.EntranceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Implementation.Views.Activities.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
    </application>

</manifest>